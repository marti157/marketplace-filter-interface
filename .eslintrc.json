{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      1,
      {
        "code": 100,
        "ignoreComments": true
      }
    ],
    "import/extensions": 0,
    "react/jsx-filename-extension": 0,
    "react/destructuring-assignment": 0,
    "react/prop-types": 0,
    "global-require": 0,
    "no-return-await": 0,
    "no-console": 0,
    "no-unused-vars": 1,
    "spaced-comment": 0,
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true
      }
    ],
    "import/order": [
      2,
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ]
  }
}
